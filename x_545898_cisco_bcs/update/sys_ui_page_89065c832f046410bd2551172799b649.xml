	software();

function software() {

	var software = new GlideAjax("Cisco_ClientServerBridge");
	software.addParam('sysparm_name', 'softwareLifecycleDrilldown');
	software.getXML(SoftwareLifecycleData);
}

function SoftwareLifecycleData(response) {
	var answer = response.responseXML.documentElement.getAttribute("answer");
	var result = JSON.parse(answer);
	//alert(JSON.stringify(result));
	var categories = ['Past','0-1y','1-2y','2-3y','3+ years','Not Announced'];
	var json = {};
	var count = 0;

	json.categories = categories;
	var data_array = [];
	for (var i in result) {
		data_array.push({
			name: i ,
			data: [{ x : count , y : parseInt(result[i]) }]
		});
		count++;
	}
	alert(JSON.stringify(data_array));

	renderUIScript("container"," ",data_array,"column",json,"Software count");
}
function renderUIScript(groupBy,title,data,graphType,json,yAxis) {

	ScriptLoader.getScripts('x_545898_cisco_bcs.Cisco_RenderGraph.jsdbx', function() {
		x_545898_cisco_bcs.Cisco_RenderGraph.renderBarChart(groupBy,title,data,graphType,json,yAxis);
	});
}]]></client_script>
