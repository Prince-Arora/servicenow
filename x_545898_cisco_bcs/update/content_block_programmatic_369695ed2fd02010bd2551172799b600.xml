        <programmatic_content><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
	<div id="cbp_div" style="padding-left: 15px;width: 100%; height: 100%;"> 
		<div>
			<h1 id="bestPracticeGuidelines"></h1>
			<b>Best practice guidelines</b>
		</div>
		<div>
			<h1 id="uniqueAdvisories"></h1>
			<b>Unique devices with advisories</b>
		</div>
		<div>
			<h1 id="avgAdvisories"></h1>
			<b>Average advisories per device</b>
		</div>
	</div>
	
	<script>
		var ga = new GlideAjax('Cisco_ClientServerBridge');
		ga.addParam('sysparm_name', 'configurationWidgetData');
		ga.getXML(getConfigurationResponse);
	   
		function getConfigurationResponse(response) {
		
			var answer = response.responseXML.documentElement.getAttribute("answer");
	    	var result = JSON.parse(answer);
		
		document.getElementById("bestPracticeGuidelines").innerHTML = result[0];
		document.getElementById("uniqueAdvisories").innerHTML = result[1];
		document.getElementById("avgAdvisories").innerHTML = result[2];
		
		}
	</script>
</j:jelly>]]></programmatic_content>
